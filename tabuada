<?php

while(1){
    $stdin = fopen("php://stdin","r");
    print("Digite um nÃºmero inteiro entre 1 e 9: \n");
    $num = fgets($stdin);
    if (($num>=1)and($num<=9)){
        break;
    }
    print("VocÃª digitou um nÃºmero fora do intervalo correto!\n");
}

    print("\nTABUADA DE $num\n");
    for($i=1;$i<11;$i++){
        $mult = $num * $i;
        print("$num x $i = $mult \n");
    }
?>
